---
import Button from "@ui/Button.astro";

// Content for the section title and subtitle
const title =
  'Stop Wrestling With Sample Formats. <br /> Get SampleStack.';
const subTitle =
  "Download the beta and start organizing your sample library for hardware today.";

// Call-to-action configuration for the primary button
const primaryCTA = { text: "Download for macOS", href: "https://github.com/stuart78/SampleManager/releases" };
---

<section
  class="mx-auto max-w-sm px-4 py-10 sm:max-w-xl sm:px-6 md:max-w-4xl md:py-14 lg:max-w-5xl lg:px-8 lg:py-20 xl:max-w-6xl 2xl:max-w-[81rem]"
>
  <div class="mx-auto mb-10 max-w-3xl text-center lg:mb-14">
    <h2
      class="text-balance text-4xl text-slate-800 sm:text-5xl"
    >
      <Fragment set:html={title} />
    </h2>
    <p class="text-lg\/8 mt-5 text-pretty text-slate-600">
      {subTitle}
    </p>
    <Button
      href={primaryCTA.href}
      variant="primary"
      className="mt-7 inline-flex border-none px-3.5!">{primaryCTA.text}</Button
    >
  </div>
</section>
