---
import Icon from "@ui/icons/Icon.astro";

// Content for the section title and subtitle
const title =
  'Why Choose SampleStack?';
const subTitle =
  "Hardware samplers have strict requirements. Wrong sample rate, wrong bit depth, wrong filename, and your samples won't load. SampleStack eliminates the guesswork with automatic validation and conversion for every major module.";

const features = [
  {
    borderClasses: "md:border-l md:border-r",
    gradientClasses: "bg-linear-to-l/oklch from-orange-200 to-transparent",
    icon: "cursorRays",
    heading: "Module-Aware Validation",
    description:
      "Each sampler has different requirements. Morphagene needs 32-bit float stereo. Squid Salmple needs 16-bit mono at 44.1kHz. SampleStack knows the specs and validates accordingly.",
  },
  {
    borderClasses: "border-b border-t md:border-b-0",
    gridClasses: "md:col-start-2 md:col-end-3",
    gradientClasses: "bg-linear-to-t/oklch from-orange-200 to-transparent",
    icon: "cog",
    heading: "Non-Destructive Editing",
    description:
      "Preview edits before committing. Add cue points, apply fades, split samples. All changes are staged until you save. Discard anytime to revert to the original.",
  },
  {
    borderClasses: "md:border-l md:border-r md:border-t",
    gridClasses: "md:col-end-4",
    gradientClasses: "bg-linear-to-tl/oklch from-orange-200 to-transparent",
    icon: "puzzle",
    heading: "Works With Your Workflow",
    description:
      "Keep your master sample library organized however you like. Drag samples to module collections when you need them. SampleStack handles the conversion automatically.",
  },
];
---

<section
  class="mx-auto max-w-sm px-4 py-10 sm:max-w-xl sm:px-6 md:max-w-4xl md:py-14 lg:max-w-5xl lg:px-8 lg:py-20 xl:max-w-6xl 2xl:max-w-[81rem]"
>
  <div
    class="grid grid-flow-row-dense grid-cols-1 md:grid-cols-3 md:grid-rows-2"
  >
    {/* Section container for the title and subtitle */}
    <div
      class="mx-auto max-w-lg pb-5 text-center md:col-span-2 lg:mx-0 lg:flex-auto lg:text-left"
    >
      <h2
        class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight"
      >
        <Fragment set:html={title} />
      </h2>
      <p
        class="mt-6 text-start text-lg/8 text-pretty text-slate-700 sm:text-center md:text-start"
      >
        {subTitle}
      </p>
    </div>

    {/* Feature Cards */}
    {
      features &&
        features.map((feature) => (
          <div
            class={`group relative mx-auto flex flex-col border-dashed border-slate-400 py-10 ${feature.borderClasses} ${feature.gridClasses}`}
          >
            <div
              class={`group pointer-events-none absolute inset-0 h-full w-full ${feature.gradientClasses} opacity-0 transition duration-300 group-hover:opacity-100`}
            />
            <div class="relative z-10 mb-4 px-10">
              <Icon name={feature.icon} />
            </div>
            <div class="relative z-10 mb-2 px-10 text-lg font-semibold">
              <span class="inline-block text-balance text-slate-800 transition duration-300 group-hover:translate-x-2">
                {feature.heading}
              </span>
            </div>
            <p class="z-10 max-w-sm px-4 text-sm text-pretty text-slate-700 sm:max-w-lg md:mx-auto">
              {feature.description}
            </p>
          </div>
        ))
    }
  </div>
</section>
