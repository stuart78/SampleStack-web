---
export const prerender = true;
import BaseLayout from "@layout/BaseLayout.astro";

const seo = {
  title: "About - SampleStack",
  description:
    "Learn about SampleStack, the native macOS sample manager built for Eurorack and hardware samplers.",
};

const aboutData = {
  title: "About SampleStack",
  description:
    "SampleStack is a native macOS sample manager built for musicians who work with hardware samplers. It was created to solve a simple problem: getting the right samples, in the right format, onto your modules without the tedious manual work.",
};

const expertise = [
  {
    title: "Module-aware",
    description:
      "Built with deep knowledge of hardware sampler requirements. Morphagene, Squid Salmple, Multigrain, Digitakt, Octatrack, Blackbox, and more.",
  },
  {
    title: "Non-destructive",
    description:
      "Your original samples are never modified. All edits are staged until you save. Discard anytime to revert.",
  },
  {
    title: "Built with Swift",
    description:
      "A native macOS app built with Swift for fast performance. No Electron, no web views. Works offline.",
  },
];
---

<BaseLayout seo={seo}>
  <section class="mx-auto max-w-sm px-4 pb-12 pt-48 sm:max-w-xl sm:px-6 md:max-w-4xl lg:max-w-5xl lg:px-8 xl:max-w-6xl 2xl:max-w-[81rem]">
    <div class="max-w-7xl">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h1
          class="text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl"
        >
          {aboutData.title}
        </h1>
        <p
          class="mt-8 text-pretty text-lg font-medium text-slate-700 sm:text-xl/8"
        >
          {aboutData.description}
        </p>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-sm px-4 py-24 sm:max-w-xl sm:px-6 md:max-w-4xl lg:max-w-5xl lg:px-8 lg:py-32 xl:max-w-6xl 2xl:max-w-[81rem]">
    <div
      class="group relative isolate overflow-hidden rounded-3xl bg-orange-200 p-5 sm:p-11"
    >
      <div
        class="group pointer-events-none absolute inset-0 -top-[10%] h-[120%] w-full rounded-xl bg-linear-to-r/oklch from-orange-200 to-off-white opacity-0 transition duration-1000 group-hover:opacity-100"
      >
      </div>
      <div class="svgBlock mx-auto max-w-7xl">
        <h2
          class="relative text-balance pl-4 text-2xl font-semibold text-slate-800 md:text-3xl md:leading-tight"
        >
          Built for hardware musicians
        </h2>
        <dl
          class="relative mt-10 grid max-w-xl grid-cols-1 items-start text-base/7 text-slate-600 sm:max-w-none lg:grid-flow-row-dense lg:auto-rows-fr lg:grid-cols-3"
        >
          {
            expertise.map((item, index) => (
              <div
                class={`px-5 py-5 sm:px-10 lg:py-0 ${index === 1 ? "h-full border-y border-dashed border-slate-400 lg:border-x lg:border-y-0" : ""}`}
              >
                <dt class="text-balance text-lg font-semibold text-slate-600">
                  {item.title}
                </dt>
                <dd class="mt-2 text-pretty text-slate-500">
                  {item.description}
                </dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </section>

  <style>
    .svgBlock::after {
      content: "";
      position: absolute;
      inset: 0;
      background-image: url(/guilloche.svg);
      background-repeat: repeat;
      background-position: right top;
      background-size: 20px, 20px;
      opacity: 0.075;
      background-clip: padding-box;
      mask-image: linear-gradient(270deg, rgb(0, 0, 0), rgba(0, 0, 0, 0));
      pointer-events: none;
    }
  </style>
</BaseLayout>
